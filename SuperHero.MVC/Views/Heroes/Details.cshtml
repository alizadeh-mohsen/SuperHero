@model SuperHero.MVC.Models.HeroDto
@{
    ViewData["Title"] = "Hero Details";
}


@if (TempData["error"] != null)
{
    <div class="alert alert-danger">@TempData["error"]</div>
}

<div class="row">
    <div class="card" style="width: 18rem; padding:5px">
        <img src="~/images/@Model.Image" class="card-img-top" alt="@Model.Name">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">Universe: @Model.Universe
                <br />
            Level: @Model.Level</p>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>  
</div>
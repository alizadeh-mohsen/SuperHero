@model SuperHero.MVC.Models.HeroDto
@{
    ViewData["Title"] = "Hero Details";
}


@if (TempData["error"] != null)
{
    <div class="alert alert-danger">@TempData["error"]</div>
}

<div>
    <dl class="row">
        <dt class="col-sm-2">@Model.Name</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="~/images/@Model.Image" alt="@Model.Name" />
            }
        </dd>
        <dt class="col-sm-2">Universe</dt>
        <dd class="col-sm-10">@Model.Universe</dd>
        <dt class="col-sm-2">Level</dt>
        <dd class="col-sm-10">@Model.Level</dd>
        
       
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
@model SuperHero.MVC.Models.HeroDto
@{
    ViewData["Title"] = "Delete Hero";
}

<h2>Delete Hero</h2>

<h3>Are you sure you want to delete this hero?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Level</dt>
        @* <dd class="col-sm-10">@Model.Level</dd> *@
        <dt class="col-sm-2">Universe</dt>
        @* <dd class="col-sm-10">@Model.Universe</dd> *@
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="@Model.Image" alt="@Model.Name" width="100" />
            }
        </dd>
    </dl>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Verbose",
    "WriteTo": [
      { "Name": "Console" },
      //{
      //  "Name": "File",
      //  "Args": {
      //    "path": "D://logs/log-.txt",
      //    "rollingInterval": "Day"
      //  }
      //},
      {
        "Name": "Seq",
        "Args": {
          //"serverUrl": "http://host.docker.internal:5341"
          "serverUrl": "http://superhero.log"
        }

      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId" ],
    "Properties": {
      "Application": "SuperHero.API"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    //"DefaultConnection": "Server=host.docker.internal, 1600;Database=SuperHeroDB;User Id=sa;Password=Password@1;Trusted_Connection=false;MultipleActiveResultSets=true;Encrypt=false;"
    "DefaultConnection": "Server=superhero.database;Database=SuperHeroDB;User Id=sa;Password=Password@1;Trusted_Connection=false;MultipleActiveResultSets=true;Encrypt=false;"
  }
}
